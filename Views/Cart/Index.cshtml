@model List<OnlineShoppingApp.Models.CartItem>

<h2>Shopping Cart</h2>

@if (!Model.Any())
{
    <h4>Your cart is empty.</h4>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
            <th>Remove</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice</td>
                <td>
                    <a asp-action="Remove"
                       asp-route-id="@item.ProductId"
                       class="btn btn-danger">
                        Remove
                    </a>
                </td>
            </tr>
        }
    </table>

    <h4>Total: @ViewBag.Total</h4>
    <h4>Discount: @ViewBag.Discount</h4>
    <h4>Final Total: @ViewBag.FinalTotal</h4>
}

<a asp-controller="Product"
   asp-action="Index"
   class="btn btn-primary">
    Continue Shopping
</a>